{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": false,
    "console_title": true,
    "console_title_style": "template",
    "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "right",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "kubectl",
                    "style": "plain",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#808080",
                    "properties": {
                        "prefix": " \uFD31 "
                    }
                },
                {
                    "type": "az",
                    "style": "plain",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#007ACC",
                    "properties": {
                        "display_id": false,
                        "display_name": true,
                        "info_separator": " @ ",
                        "prefix": " \uFD03 "
                    }
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#808080",
                    "properties": {
                        "time_format": "15:04:05"
                    }
                }
            ]
        },
        {
            "type": "newline",
            "alignment": "",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": null
        },
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#808080",
                    "properties": null
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#007ACC",
                    "properties": {
                        "folder_icon": "",
                        "folder_separator_icon": "/",
                        "style": "short"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#808080",
                    "properties": null
                },
                {
                    "type": "exit",
                    "style": "plain",
                    "foreground": "#BC414C",
                    "properties": {
                        "prefix": " "
                    }
                }
            ]
        },
        {
            "type": "newline",
            "alignment": "",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": null
        },
        {
            "type": "prompt",
            "alignment": "left",
            "horizontal_offset": 0,
            "vertical_offset": 0,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "powerline_symbol": "",
                    "foreground": "#007ACC",
                    "background": "",
                    "properties": {
                        "prefix": "",
                        "text": "❯"
                    }
                }
            ]
        }
    ]
}
